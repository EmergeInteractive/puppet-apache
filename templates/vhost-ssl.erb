# file managed by puppet
<% if ports == "all" -%>
<VirtualHost<% apache_ssl_ports.each do |port| %> <%= ip_address %>:<%= port %><% end %>>
<% else -%>
<VirtualHost<% ports.each do |port| %> <%= ip_address %>:<%= port %><% end %>>
<% end -%>
  ServerName <%= name %>

<% aliases.each do |serveralias| -%>
  ServerAlias <%= serveralias %>
<% end -%>

  DocumentRoot <%= wwwroot %>/<%= name %>/htdocs

  LogLevel warn

  ErrorLog <%= wwwroot %>/<%= name %>/logs/error.log
  CustomLog <%= wwwroot %>/<%= name %>/logs/access.log combined

  Include <%= wwwroot %>/<%= name%>/conf/*.conf

  SSLEngine On
  SSLCertificateFile <%= certfile %>
  SSLCertificateKeyFile <%= certkeyfile %>
  SSLCACertificateFile <%= cacertfile %>
<% if has_variable?("certchainfile") -%>
  SSLCertificateChainFile <%= certchainfile %>
<% end -%>

  # CGI scripts
  ScriptAlias /cgi-bin/ <%= wwwroot %>/<%= name %>/cgi-bin/
  <Directory <%= wwwroot %>/<%= name %>/cgi-bin>
    Options +ExecCGI
    AddHandler cgi-script .cgi
  </Directory>

  ServerSignature Off

</VirtualHost>
